<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001443">

    <!-- 1. Toolbar -->
    <TextView
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:fontFamily="@font/micross"
        android:layout_height="wrap_content"
        android:background="#11267E"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Progress"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 7. Кнопка BACK (закреплена внизу) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="#FEDD32"
        android:text="BACK"
        android:textColor="#001443"
        android:textSize="18sp"
        android:paddingVertical="20dp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scrollable content между Toolbar и кнопкой BACK -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- 2. Название цели -->
            <TextView
                android:id="@+id/tvGoal"
                android:fontFamily="@font/micross"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="New Car"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <!-- 3. График -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"/>

            <!-- 4. Инфо-блоки -->
            <LinearLayout
                android:id="@+id/infoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <!-- a) Total amount of savings -->
                <LinearLayout
                    android:id="@+id/rowTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/micross"
                        android:text="Total amount of savings"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 400$"
                        android:fontFamily="@font/micross"
                        android:textColor="#FEDD32"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- b) Average replenishment amount -->
                <LinearLayout
                    android:id="@+id/rowAverage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/micross"
                        android:text="Average replenishment amount"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="233,3$"
                        android:fontFamily="@font/micross"
                        android:textColor="#FEDD32"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- c) Number of transactions -->
                <LinearLayout
                    android:id="@+id/rowCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Number of transactions"
                        android:fontFamily="@font/micross"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 5. Навигация диапазона -->
            <LinearLayout
                android:id="@+id/navRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnPrev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_arrow_button"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="16dp"
                    android:src="@drawable/arrow_left_ic" />

                <!-- Заполнитель, чтобы TvRange занял всё доступное место и текст в нём выравнивался по центру -->
                <TextView
                    android:id="@+id/tvRange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/micross"
                    android:gravity="center"
                    android:text="Last month"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <!-- Следующий период -->
                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_arrow_button"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="16dp"
                    android:src="@drawable/arrow_right_ic" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
