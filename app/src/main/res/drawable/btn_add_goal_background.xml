<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- При нажатии -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1E3399"/> <!-- чуть светлее при нажатии -->
            <stroke android:width="2dp" android:color="#FEDD32"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- По умолчанию -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00154C"/> <!-- Тёмно-синий фон -->
            <stroke android:width="2dp" android:color="#FEDD32"/> <!-- Жёлтая рамка -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
